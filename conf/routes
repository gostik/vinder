

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# Home page
GET         /                              controllers.Application.index()

# Users
GET         /users/:id                     controllers.Application.getUser(id: Long)
GET         /users/:uid                    controllers.Application.getUserUid(uid: Long)
POST        /users/create                  controllers.Application.newUser()
GET         /users/:id/getNextPhoto        controllers.Application.getNextPhoto(id: Long)
POST        /users/:id/updateUser          controllers.Application.updateUser(id: Long)

#Photos
GET         /photo/:id                     controllers.Application.getPhoto(id: Long)
GET         /photo/:user_id                controllers.Application.getPhotos(user_id: Long)
POST        /newPhoto                      controllers.Application.newPhoto()
POST        /photo/:id                     controllers.Application.deletePhoto(id: Long)

#Messages
GET         /messages/:id                  controllers.Application.getMessage(id: Long)
GET         /messages                      controllers.Application.getMessages(who_id: Long, whom_id: Long)
POST        /newMessage                    controllers.Application.newMessage()

#Likes
GET         /likes/:id                     controllers.Application.getLike(id: Long)
GET         /likes                         controllers.Application.getLikes(who_id: Long, whom_id: Long)
POST        /newLike                       controllers.Application.newLike()


# CRUD Controllers
->          /app                           play.crud.Routes
# REST API
->          /api                           play.rest.Routes
